{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/api/login",
        "function": "Login"
      },
      {
        "source": "/api/user",
        "function": "User"
      },
      {
        "source": "/api/recents",
        "function": "GetRecentlyPlayed"
      }
    ]
  }
}
